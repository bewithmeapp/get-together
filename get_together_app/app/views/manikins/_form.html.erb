<%= form_for @manikin do |form|%>

    Model Name: <%= form.text_field :manikin_name %><br/>
    Modeling Type: <%= form.select :manikin_type, ['Makeup Model', 'Fashion Model', 'Plus-Size Model', 'Parts Model', 'Photograph Model', 'Parts Model' ] %> <br/>
    Skin Tone: <%= form.select :skin_tone, ['Ivory', 'Rose Biege', 'Honey', 'Bronze', 'Caramel', 'Chocolate'] %> <br/>
    Skin Condition: <%= form.text_field :skin_condition %> <br/>
    Face Shape: <%= form.select :face_shape, ['Round', 'Oval', 'Square', 'Rectangle', 'Diamond', 'Heart'] %> <br/>
    Eye Color: <%= form.text_field :eye_color %> <br/>
    Hair Color: <%= form.text_field :hair_color %> <br/>
    Weight: <%= form.number_field :weight %> <br/>
    Height: <%= form.number_field :height %> <br/>
    Date of Birth: <%= form.date_select :date_of_birth %> <br/>
    Gender: <%= form.text_field :gender %> <br/>
    Bust: <%= form.number_field :bust %> <br/>
    Waist: <%= form.number_field :waist %> <br/>
    Hips: <%= form.number_field :hips %> <br/>
    Shoes Size: <%= form.number_field :shoes_size %> <br/>
    Model Images: <%= form.text_field :manikin_images %> <br/>
    Phone Number: <%= form.telephone_field :phone %> <br/>
    Location: <%= form.text_field :location %> <br/>
    Description: <%= form.text_area :description %> <br/>
    Email: <%= form.email_field :email %> <br/>
    Password: <%= form.password_field :password %><br/>

    <%= form.submit %>

<%end%>